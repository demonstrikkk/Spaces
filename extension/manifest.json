{
  "manifest_version": 3,
  "name": "Spaces - AI Second Brain",
  "version": "1.0",
  "description": "Capture, organize, and chat with your knowledge.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "extension/popup.html",
    "default_title": "Spaces"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}