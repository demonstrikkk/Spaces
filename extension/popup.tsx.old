import React, { useState, useEffect } from 'react';
import ReactDOM from 'react-dom/client';
import '../index.css';
import { Space, Node, NodeType } from '../types';
import { getSpaces, createNode, createSpace } from '../services/dataService';
import { Zap, Plus, ExternalLink, Check, Image, Video, FileText, Link as LinkIcon, Sparkles, Globe, BookOpen, Bookmark, X, ArrowLeft, Loader2 } from 'lucide-react';

interface CaptureData {
    type: string;
    nodeType: NodeType;
    title: string;
    content: string;
    url?: string;
    mediaUrl?: string;
    thumbnail?: string;
    requiresProcessing?: boolean;
    metadata?: any;
}

const Popup = () => {
    const [spaces, setSpaces] = useState<Space[]>([]);
    const [loading, setLoading] = useState(false);
    const [view, setView] = useState<'main' | 'create' | 'preview'>('main');
    const [newSpaceName, setNewSpaceName] = useState('');
    const [currentTab, setCurrentTab] = useState<{ title: string, url: string } | null>(null);
    const [savedStatus, setSavedStatus] = useState<string | null>(null);
    const [pendingCapture, setPendingCapture] = useState<CaptureData | null>(null);
    const [selectedSpace, setSelectedSpace] = useState<string | null>(null);

    useEffect(() => {
        loadData();
        checkPendingCapture();
        chrome.tabs.query({ active: true, currentWindow: true }, (tabs) => {
            if (tabs[0]) {
                setCurrentTab({
                    title: tabs[0].title || 'Unknown Page',
                    url: tabs[0].url || ''
                });
            }
        });
    }, []);

    const checkPendingCapture = () => {
        chrome.runtime.sendMessage({ action: 'getPendingCapture' }, (response) => {
            if (response?.capture) {
                setPendingCapture(response.capture);
                setView('preview');
            }
        });
    };

    const loadData = async () => {
        const data = await getSpaces();
        setSpaces(data);
    };

    const handleSaveToSpace = async (space: Space) => {
        if (!currentTab && !pendingCapture) return;
        setLoading(true);
        try {
            let newNode: Node;

            if (pendingCapture) {
                newNode = {
                    id: Date.now().toString(),
                    spaceId: space.id,
                    type: pendingCapture.nodeType,
                    title: pendingCapture.title,
                    summary: pendingCapture.content.substring(0, 200),
                    content: pendingCapture.content,
                    url: pendingCapture.url,
                    mediaUrl: pendingCapture.mediaUrl,
                    thumbnail: pendingCapture.thumbnail,
                    tags: ['ContextMenu', getTypeTag(pendingCapture.type)],
                    createdAt: new Date().toISOString(),
                    status: 'new',
                    pinned: false,
                    source: 'extension',
                    metadata: pendingCapture.metadata
                };
                
                chrome.runtime.sendMessage({ action: 'clearPendingCapture' });
                setPendingCapture(null);
            } else {
                let selection = '';
                try {
                    const [tab] = await chrome.tabs.query({ active: true, currentWindow: true });
                    if (tab.id) {
                        const results = await chrome.scripting.executeScript({
                            target: { tabId: tab.id },
                            func: () => window.getSelection()?.toString() || ''
                        });
                        if (results[0]?.result) selection = results[0].result;
                    }
                } catch (e) {
                    console.log('Script injection failed', e);
                }

                newNode = {
                    id: Date.now().toString(),
                    spaceId: space.id,
                    type: NodeType.ARTICLE,
                    title: currentTab?.title || 'Untitled',
                    summary: selection ? selection.substring(0, 200) : `Saved from ${new URL(currentTab?.url || '').hostname}`,
                    content: selection || currentTab?.url || '',
                    url: currentTab?.url,
                    tags: ['Quick Save'],
                    createdAt: new Date().toISOString(),
                    status: 'new',
                    pinned: false,
                    source: 'extension'
                };
            }

            await createNode(newNode);
            setSavedStatus(`âœ“ Saved to ${space.name}`);
            setTimeout(() => {
                setSavedStatus(null);
                setView('main');
            }, 2000);
        } catch (error) {
            console.error('Save error:', error);
            setSavedStatus('âœ— Failed to save');
        } finally {
            setLoading(false);
        }
    };

    const handleCreateSpace = async () => {
        if (!newSpaceName.trim()) return;
        setLoading(true);
        const newSpace: Space = {
            id: Date.now().toString(),
            name: newSpaceName,
            description: 'A new knowledge space',
            createdAt: new Date().toISOString(),
            icon: getRandomIcon(),
            color: getRandomColor()
        };
        await createSpace(newSpace);
        setNewSpaceName('');
        await loadData();
        setView('main');
        setLoading(false);
    };

    const getTypeTag = (type: string): string => {
        const map: Record<string, string> = {
            'text': 'Text',
            'image': 'Image',
            'video': 'Video',
            'link': 'Link',
            'page': 'Article'
        };
        return map[type] || 'Content';
    };

    const getRandomIcon = () => ['ðŸš€', 'ðŸ’¡', 'âš¡', 'ðŸŽ¯', 'ðŸ”¥', 'âœ¨', 'ðŸŒŸ', 'ðŸ’Ž'][Math.floor(Math.random() * 8)];
    const getRandomColor = () => ['bg-blue-500', 'bg-purple-500', 'bg-pink-500', 'bg-indigo-500', 'bg-violet-500'][Math.floor(Math.random() * 5)];

    const getTypeIcon = (type: NodeType) => {
        switch (type) {
            case NodeType.IMAGE: return <Image className="w-4 h-4" />;
            case NodeType.VIDEO: return <Video className="w-4 h-4" />;
            case NodeType.ARTICLE: return <FileText className="w-4 h-4" />;
            case NodeType.LINK: return <LinkIcon className="w-4 h-4" />;
            default: return <BookOpen className="w-4 h-4" />;
        }
    };

    if (savedStatus) {
        return (
            <div className="w-[420px] h-[240px] bg-gradient-to-br from-slate-950 via-slate-900 to-indigo-950 flex items-center justify-center relative overflow-hidden">
                <div className="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-indigo-500/20 via-transparent to-transparent" />
                <div className="relative text-center animate-in fade-in zoom-in duration-300">
                    <div className="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-r from-emerald-500 to-teal-500 flex items-center justify-center shadow-2xl shadow-emerald-500/50 animate-pulse">
                        <Check className="w-10 h-10 text-white" strokeWidth={3} />
                    </div>
                    <p className="text-2xl font-bold text-white mb-2">{savedStatus.includes('âœ“') ? 'Saved!' : 'Error'}</p>
                    <p className="text-slate-300 text-sm">{savedStatus}</p>
                </div>
            </div>
        );
    }

    return (
        <div className="w-[420px] h-[580px] bg-gradient-to-br from-slate-950 via-slate-900 to-indigo-950 text-white overflow-hidden flex flex-col relative">
            {/* Animated Background */}
            <div className="absolute inset-0 overflow-hidden pointer-events-none">
                <div className="absolute top-[-50%] right-[-50%] w-full h-full bg-gradient-to-br from-indigo-500/10 to-purple-500/10 rounded-full blur-3xl animate-spin-slow" />
                <div className="absolute bottom-[-50%] left-[-50%] w-full h-full bg-gradient-to-tr from-violet-500/10 to-pink-500/10 rounded-full blur-3xl animate-spin-slower" />
            </div>

            {/* Header */}
            <div className="relative z-10 px-6 pt-6 pb-4 border-b border-white/10 backdrop-blur-xl bg-white/5">
                <div className="flex items-center justify-between mb-3">
                    <div className="flex items-center gap-3">
                        {view !== 'main' && (
                            <button 
                                onClick={() => setView('main')}
                                className="p-1.5 hover:bg-white/10 rounded-lg transition-all"
                            >
                                <ArrowLeft className="w-4 h-4" />
                            </button>
                        )}
                        <div className="w-9 h-9 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-lg shadow-indigo-500/30">
                            <Zap className="w-5 h-5 fill-current" />
                        </div>
                        <div>
                            <h1 className="text-lg font-bold leading-none">Spaces</h1>
                            <p className="text-[10px] text-indigo-300 font-medium">Knowledge Capture</p>
                        </div>
                    </div>
                    {view === 'main' && (
                        <button
                            onClick={() => setView('create')}
                            className="p-2 hover:bg-white/10 rounded-lg transition-all group"
                            title="New Space"
                        >
                            <Plus className="w-5 h-5 group-hover:rotate-90 transition-transform" />
                        </button>
                    )}
                </div>
                
                {/* Current Tab Info */}
                {currentTab && view === 'main' && (
                    <div className="flex items-center gap-2 text-xs text-slate-300 bg-white/5 rounded-lg px-3 py-2 backdrop-blur-sm border border-white/10">
                        <Globe className="w-3.5 h-3.5 flex-shrink-0 text-indigo-400" />
                        <span className="truncate flex-1">{currentTab.title}</span>
                    </div>
                )}
            </div>

            {/* Main Content */}
            <div className="relative z-10 flex-1 overflow-y-auto px-6 py-4 custom-scrollbar">
                {/* Preview View */}
                {view === 'preview' && pendingCapture && (
                    <div className="space-y-4 animate-in fade-in slide-in-from-bottom-4 duration-300">
                        <div className="bg-white/5 backdrop-blur-sm rounded-2xl p-5 border border-white/10">
                            <div className="flex items-start gap-3 mb-4">
                                <div className="p-2.5 bg-gradient-to-br from-indigo-500/20 to-purple-500/20 rounded-xl border border-indigo-500/30">
                                    {getTypeIcon(pendingCapture.nodeType)}
                                </div>
                                <div className="flex-1 min-w-0">
                                    <p className="text-xs text-indigo-300 font-medium mb-1">Captured Content</p>
                                    <h3 className="font-semibold text-sm truncate">{pendingCapture.title}</h3>
                                </div>
                            </div>
                            
                            {pendingCapture.thumbnail && (
                                <img 
                                    src={pendingCapture.thumbnail} 
                                    alt="Preview"
                                    className="w-full h-32 object-cover rounded-xl mb-3 border border-white/10"
                                />
                            )}
                            
                            <p className="text-xs text-slate-300 line-clamp-3 bg-black/20 rounded-lg p-3 border border-white/5">
                                {pendingCapture.content}
                            </p>
                        </div>

                        <div>
                            <p className="text-xs text-slate-400 font-medium mb-3 uppercase tracking-wider">Save to Space</p>
                            <div className="space-y-2">
                                {spaces.map(space => (
                                    <button
                                        key={space.id}
                                        onClick={() => handleSaveToSpace(space)}
                                        disabled={loading}
                                        className="w-full flex items-center gap-3 p-3 bg-white/5 hover:bg-white/10 rounded-xl transition-all group border border-white/10 hover:border-indigo-500/50"
                                    >
                                        <div className="w-8 h-8 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-base shadow-lg">
                                            {space.icon}
                                        </div>
                                        <span className="flex-1 text-left text-sm font-medium">{space.name}</span>
                                        <ExternalLink className="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity text-indigo-400" />
                                    </button>
                                ))}
                            </div>
                        </div>
                    </div>
                )}

                {/* Create Space View */}
                {view === 'create' && (
                    <div className="space-y-4 animate-in fade-in slide-in-from-bottom-4 duration-300">
                        <div className="bg-gradient-to-br from-indigo-500/10 to-purple-500/10 backdrop-blur-sm rounded-2xl p-6 border border-indigo-500/30">
                            <div className="text-center mb-6">
                                <div className="w-16 h-16 mx-auto mb-3 rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-xl shadow-indigo-500/30">
                                    <Sparkles className="w-8 h-8" />
                                </div>
                                <h2 className="text-lg font-bold mb-1">Create New Space</h2>
                                <p className="text-xs text-slate-400">A new frontier of knowledge</p>
                            </div>
                            
                            <input
                                type="text"
                                value={newSpaceName}
                                onChange={(e) => setNewSpaceName(e.target.value)}
                                onKeyDown={(e) => e.key === 'Enter' && handleCreateSpace()}
                                placeholder="Space name..."
                                className="w-full px-4 py-3 bg-black/20 border border-white/20 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent placeholder-slate-500 transition-all"
                                autoFocus
                            />
                            
                            <button
                                onClick={handleCreateSpace}
                                disabled={!newSpaceName.trim() || loading}
                                className="w-full mt-4 py-3 bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 disabled:opacity-50 disabled:cursor-not-allowed rounded-xl font-semibold text-sm transition-all shadow-lg hover:shadow-indigo-500/50 flex items-center justify-center gap-2"
                            >
                                {loading ? (
                                    <Loader2 className="w-4 h-4 animate-spin" />
                                ) : (
                                    <>
                                        <Plus className="w-4 h-4" />
                                        Create Space
                                    </>
                                )}
                            </button>
                        </div>

                        <div className="text-center">
                            <p className="text-xs text-slate-500">Examples: "Research Papers", "Design Inspo", "Dev Notes"</p>
                        </div>
                    </div>
                )}

                {/* Main Space Grid */}
                {view === 'main' && (
                    <div className="space-y-3 animate-in fade-in duration-300">
                        {spaces.length === 0 ? (
                            <div className="text-center py-12">
                                <div className="w-16 h-16 mx-auto mb-4 rounded-2xl bg-white/5 flex items-center justify-center border border-white/10">
                                    <Bookmark className="w-8 h-8 text-slate-500" />
                                </div>
                                <p className="text-sm text-slate-400 mb-2">No spaces yet</p>
                                <p className="text-xs text-slate-500">Create your first space to get started</p>
                            </div>
                        ) : (
                            <>
                                <p className="text-xs text-slate-400 font-medium uppercase tracking-wider mb-2">Your Spaces</p>
                                {spaces.map((space, idx) => (
                                    <button
                                        key={space.id}
                                        onClick={() => handleSaveToSpace(space)}
                                        disabled={loading}
                                        className="w-full group relative overflow-hidden"
                                        style={{ animationDelay: `${idx * 50}ms` }}
                                    >
                                        <div className="absolute inset-0 bg-gradient-to-r from-indigo-500/10 to-purple-500/10 opacity-0 group-hover:opacity-100 transition-opacity rounded-xl" />
                                        <div className="relative flex items-center gap-3 p-3.5 bg-white/5 hover:bg-white/10 rounded-xl transition-all border border-white/10 hover:border-indigo-500/50">
                                            <div className="w-11 h-11 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-xl shadow-lg group-hover:scale-110 transition-transform">
                                                {space.icon}
                                            </div>
                                            <div className="flex-1 text-left min-w-0">
                                                <p className="font-semibold text-sm truncate">{space.name}</p>
                                                <p className="text-xs text-slate-400 truncate">{space.description}</p>
                                            </div>
                                            <div className="flex items-center gap-2">
                                                <Sparkles className="w-4 h-4 text-indigo-400 opacity-0 group-hover:opacity-100 transition-opacity" />
                                                <ExternalLink className="w-4 h-4 text-slate-500 group-hover:text-indigo-400 transition-colors" />
                                            </div>
                                        </div>
                                    </button>
                                ))}
                            </>
                        )}
                    </div>
                )}
            </div>

            {/* Footer */}
            <div className="relative z-10 px-6 py-3 border-t border-white/10 backdrop-blur-xl bg-white/5">
                <div className="flex items-center justify-between text-[10px] text-slate-500">
                    <span>Powered by Gemini AI</span>
                    <span className="flex items-center gap-1">
                        <div className="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse" />
                        Connected
                    </span>
                </div>
            </div>
        </div>
    );
};

// Mount
const root = document.getElementById('root');
if (root) {
    ReactDOM.createRoot(root).render(<Popup />);
}
