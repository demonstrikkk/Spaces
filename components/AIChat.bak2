import React, { useState, useEffect, useRef } from 'react';
import { Node } from '../types';
import { chatWithRAG, summarizeChatSession, compareSpaces } from '../services/enhancedGeminiService';
import { getChatHistories, saveChatHistory, deleteChatHistory, createNode, ChatHistory, getSpaces } from '../services/dataService';
import { Send, Sparkles, Clock, Trash2, Plus, BookOpen, Zap, Copy, Check, Globe2, X } from 'lucide-react';
import ReactMarkdown from 'react-markdown';
import { motion, AnimatePresence } from 'framer-motion';

interface AIChatProps {
  spaceId: string;
  spaceName: string;
  nodes: Node[];
  onClose?: () => void;
}

interface Message {
  role: 'user' | 'model';
  content: string;
  timestamp: number;
  sources?: string[];
}

const AIChat: React.FC<AIChatProps> = ({ spaceId, spaceName, nodes, onClose }) => {
  // State
  const [messages, setMessages] = useState<Message[]>([]);
  const [input, setInput] = useState('');
  const [loading, setLoading] = useState(false);
  const [useRAG, setUseRAG] = useState(true);
  const [useGoogle, setUseGoogle] = useState(false);
  const [chatHistories, setChatHistories] = useState<ChatHistory[]>([]);
  const [activeHistoryId, setActiveHistoryId] = useState<string | null>(null);
  const [showHistory, setShowHistory] = useState(false);
  const [multiSpaceMode, setMultiSpaceMode] = useState(false);
  const [selectedSpace2, setSelectedSpace2] = useState<string | null>(null);
  const [allSpaces, setAllSpaces] = useState<any[]>([]);
  const [copied, setCopied] = useState(false);
  
  const messagesEndRef = useRef<HTMLDivElement>(null);
  const inputRef = useRef<HTMLTextAreaElement>(null);

  // Load data on mount
  useEffect(() => {
    loadChatHistories();
    loadAllSpaces();
  }, [spaceId]);

  const loadChatHistories = async () => {
    const histories = await getChatHistories(spaceId);
    setChatHistories(histories.sort((a, b) => new Date(b.updatedAt).getTime() - new Date(a.updatedAt).getTime()));
  };

  const loadAllSpaces = async () => {
    const spaces = await getSpaces();
    setAllSpaces(spaces.filter(s => s.id !== spaceId));
  };

  // Scroll to bottom
  useEffect(() => {
    messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' });
  }, [messages]);

  // Focus input
  useEffect(() => {
    inputRef.current?.focus();
  }, []);

  const handleSend = async () => {
    if (!input.trim() || loading) return;

    const userMessage: Message = {
      role: 'user',
      content: input,
      timestamp: Date.now()
    };

    setMessages(prev => [...prev, userMessage]);
    setInput('');
    setLoading(true);

    try {
      let response: string;
      let sources: string[] = [];

      if (multiSpaceMode && selectedSpace2) {
        // Multi-agent mode
        const space2 = allSpaces.find(s => s.id === selectedSpace2);
        // In real implementation, you'd load space2 nodes
        const space2Nodes: Node[] = []; // Load these
        response = await compareSpaces(nodes, space2Nodes, spaceName, space2?.name || 'Space 2', input);
        sources = [`${spaceName} & ${space2?.name}`];
      } else {
        // Regular chat with RAG
        const result = await chatWithRAG(input, useRAG ? nodes : [], messages, useGoogle);
        response = result.response;
        sources = result.sources;
      }

      const aiMessage: Message = {
        role: 'model',
        content: response,
        timestamp: Date.now(),
        sources
      };

      setMessages(prev => [...prev, aiMessage]);

      // Auto-save to history
      await saveCurrentChat([...messages, userMessage, aiMessage]);

    } catch (error: any) {
      const errorMessage: Message = {
        role: 'model',
        content: `âŒ Error: ${error.message}`,
        timestamp: Date.now()
      };
      setMessages(prev => [...prev, errorMessage]);
    } finally {
      setLoading(false);
    }
  };

  const saveCurrentChat = async (msgs: Message[]) => {
    if (msgs.length === 0) return;

    const historyId = activeHistoryId || `chat_${Date.now()}`;
    const title = msgs[0]?.content.substring(0, 50) || 'New Chat';

    const history: ChatHistory = {
      id: historyId,
      spaceId,
      title,
      messages: msgs,
      createdAt: activeHistoryId ? chatHistories.find(h => h.id === activeHistoryId)?.createdAt || new Date().toISOString() : new Date().toISOString(),
      updatedAt: new Date().toISOString()
    };

    await saveChatHistory(history);
    setActiveHistoryId(historyId);
    loadChatHistories();
  };

  const handleSummarize = async () => {
    if (messages.length === 0) return;

    setLoading(true);
    try {
      const summary = await summarizeChatSession(messages);
      
      // Save as note
      await createNode({
        id: Date.now().toString(),
        spaceId,
        type: 'NOTE' as any,
        title: `Chat Summary: ${messages[0]?.content.substring(0, 30)}...`,
        summary,
        content: summary + '\n\n---\n\n' + messages.map(m => `**${m.role}:** ${m.content}`).join('\n\n'),
        tags: ['AI Chat', 'Summary'],
        createdAt: new Date().toISOString(),
        status: 'new',
        pinned: false,
        source: 'web'
      });

      alert('âœ… Chat summarized and saved as a note!');
      handleNewChat();
    } catch (error: any) {
      alert(`âŒ Error: ${error.message}`);
    } finally {
      setLoading(false);
    }
  };

  const handleLoadHistory = (history: ChatHistory) => {
    setMessages(history.messages);
    setActiveHistoryId(history.id);
    setShowHistory(false);
  };

  const handleDeleteHistory = async (id: string) => {
    if (!confirm('Delete this chat history?')) return;
    await deleteChatHistory(id);
    if (activeHistoryId === id) {
      handleNewChat();
    }
    loadChatHistories();
  };

  const handleNewChat = () => {
    setMessages([]);
    setActiveHistoryId(null);
    setShowHistory(false);
  };

  const copyToClipboard = (text: string) => {
    navigator.clipboard.writeText(text);
    setCopied(true);
    setTimeout(() => setCopied(false), 2000);
  };

  return (
    <div className="h-full flex flex-col" style={{ background: 'var(--gradient-dark)' }}>
      {/* Header */}
      <div className="glass-dark border-b px-6 py-4" style={{ borderColor: 'var(--color-border-gold)' }}>
        <div className="flex items-center justify-between mb-4">
          <div className="flex items-center gap-3">
            <div className="w-10 h-10 rounded-xl bg-gradient-to-br from-teal-500 to-cyan-500 flex items-center justify-center shadow-lg">
              <Sparkles className="w-5 h-5 text-white" />
            </div>
            <div>
              <h3 className="text-lg font-bold text-slate-900">AI Assistant</h3>
              <p className="text-xs text-slate-500">{spaceName}</p>
            </div>
          </div>

          <div className="flex items-center gap-2">
            <button
              onClick={() => setShowHistory(!showHistory)}
              className="px-3 py-2 bg-slate-100 hover:bg-slate-200 rounded-lg text-sm font-medium text-slate-700 transition-colors flex items-center gap-2"
            >
              <Clock className="w-4 h-4" />
              History ({chatHistories.length})
            </button>
            
            {messages.length > 0 && (
              <button
                onClick={handleSummarize}
                disabled={loading}
                className="px-3 py-2 bg-teal-500 hover:bg-teal-600 text-white rounded-lg text-sm font-medium transition-colors flex items-center gap-2 disabled:opacity-50"
              >
                <BookOpen className="w-4 h-4" />
                Summarize & Save
              </button>
            )}

            {onClose && (
              <button
                onClick={onClose}
                className="p-2 hover:bg-slate-100 rounded-lg transition-colors"
              >
                <X className="w-5 h-5 text-slate-500" />
              </button>
            )}
          </div>
        </div>

        {/* Controls */}
        <div className="flex items-center gap-4 flex-wrap">
          <label className="flex items-center gap-2 cursor-pointer">
            <input
              type="checkbox"
              checked={useRAG}
              onChange={(e) => setUseRAG(e.target.checked)}
              className="w-4 h-4 text-teal-500 rounded focus:ring-teal-500"
            />
            <span className="text-sm text-slate-700 flex items-center gap-1">
              <BookOpen className="w-4 h-4" />
              Use My Knowledge ({nodes.length} items)
            </span>
          </label>

          <label className="flex items-center gap-2 cursor-pointer">
            <input
              type="checkbox"
              checked={useGoogle}
              onChange={(e) => setUseGoogle(e.target.checked)}
              className="w-4 h-4 text-teal-500 rounded focus:ring-teal-500"
            />
            <span className="text-sm text-slate-700 flex items-center gap-1">
              <Globe2 className="w-4 h-4" />
              Search Web
            </span>
          </label>

          <label className="flex items-center gap-2 cursor-pointer">
            <input
              type="checkbox"
              checked={multiSpaceMode}
              onChange={(e) => setMultiSpaceMode(e.target.checked)}
              className="w-4 h-4 text-teal-500 rounded focus:ring-teal-500"
            />
            <span className="text-sm text-slate-700 flex items-center gap-1">
              <Zap className="w-4 h-4" />
              Compare Spaces
            </span>
          </label>

          {multiSpaceMode && (
            <select
              value={selectedSpace2 || ''}
              onChange={(e) => setSelectedSpace2(e.target.value)}
              className="px-3 py-1 bg-white border border-slate-200 rounded-lg text-sm text-slate-700 focus:outline-none focus:ring-2 focus:ring-teal-500"
            >
              <option value="">Select space to compare...</option>
              {allSpaces.map(space => (
                <option key={space.id} value={space.id}>{space.name}</option>
              ))}
            </select>
          )}
        </div>
      </div>

      {/* Chat History Sidebar */}
      <AnimatePresence>
        {showHistory && (
          <motion.div
            initial={{ x: -300, opacity: 0 }}
            animate={{ x: 0, opacity: 1 }}
            exit={{ x: -300, opacity: 0 }}
            className="absolute left-0 top-0 bottom-0 w-80 bg-white border-r border-slate-200 shadow-xl z-10"
          >
            <div className="p-4 border-b border-slate-200 flex items-center justify-between">
              <h3 className="font-bold text-slate-900">Chat History</h3>
              <button
                onClick={() => setShowHistory(false)}
                className="p-1 hover:bg-slate-100 rounded-lg"
              >
                <X className="w-4 h-4" />
              </button>
            </div>
            
            <div className="overflow-y-auto h-[calc(100%-140px)]">
              {chatHistories.length === 0 ? (
                <div className="p-8 text-center text-slate-500 text-sm">
                  No chat history yet
                </div>
              ) : (
                chatHistories.map(history => (
                  <div
                    key={history.id}
                    className={`p-4 border-b border-slate-100 cursor-pointer hover:bg-slate-50 transition-colors ${
                      activeHistoryId === history.id ? 'bg-teal-50' : ''
                    }`}
                    onClick={() => handleLoadHistory(history)}
                  >
                    <div className="flex items-start justify-between mb-2">
                      <h4 className="font-medium text-sm text-slate-900 line-clamp-2 flex-1">
                        {history.title}
                      </h4>
                      <button
                        onClick={(e) => {
                          e.stopPropagation();
                          handleDeleteHistory(history.id);
                        }}
                        className="p-1 hover:bg-white rounded-lg"
                      >
                        <Trash2 className="w-3.5 h-3.5 text-slate-400 hover:text-red-500" />
                      </button>
                    </div>
                    <p className="text-xs text-slate-500">
                      {new Date(history.updatedAt).toLocaleString()} Â· {history.messages.length} messages
                    </p>
                  </div>
                ))
              )}
            </div>

            <div className="absolute bottom-0 left-0 right-0 p-4 bg-white border-t border-slate-200">
              <button
                onClick={handleNewChat}
                className="w-full px-4 py-2 bg-teal-500 hover:bg-teal-600 text-white rounded-lg font-medium transition-colors flex items-center justify-center gap-2"
              >
                <Plus className="w-4 h-4" />
                New Chat
              </button>
            </div>
          </motion.div>
        )}
      </AnimatePresence>

      {/* Messages */}
      <div className="flex-1 overflow-y-auto px-6 py-4 space-y-6">
        {messages.length === 0 && (
          <div className="text-center py-12">
            <div className="w-16 h-16 mx-auto mb-4 rounded-2xl bg-gradient-to-br from-teal-500 to-cyan-500 flex items-center justify-center shadow-xl">
              <Sparkles className="w-8 h-8 text-white" />
            </div>
            <h3 className="text-xl font-bold text-slate-900 mb-2">AI Assistant Ready</h3>
            <p className="text-slate-600 max-w-md mx-auto">
              Ask me anything about your saved content! I can search through {nodes.length} items in this space
              {useGoogle && ', search the web'}
              {multiSpaceMode && ', and compare with other spaces'}.
            </p>
            <div className="mt-6 grid grid-cols-2 gap-3 max-w-2xl mx-auto">
              <button
                onClick={() => setInput('What are the main themes in my saved content?')}
                className="p-4 bg-white border border-slate-200 rounded-xl text-left hover:border-teal-500 hover:shadow-md transition-all group"
              >
                <p className="text-sm font-medium text-slate-900 group-hover:text-teal-600">Summarize my knowledge</p>
                <p className="text-xs text-slate-500 mt-1">Get an overview</p>
              </button>
              <button
                onClick={() => setInput('Find connections between my saved items')}
                className="p-4 bg-white border border-slate-200 rounded-xl text-left hover:border-teal-500 hover:shadow-md transition-all group"
              >
                <p className="text-sm font-medium text-slate-900 group-hover:text-teal-600">Find connections</p>
                <p className="text-xs text-slate-500 mt-1">Discover relationships</p>
              </button>
              <button
                onClick={() => setInput('What should I research next based on what I have?')}
                className="p-4 bg-white border border-slate-200 rounded-xl text-left hover:border-teal-500 hover:shadow-md transition-all group"
              >
                <p className="text-sm font-medium text-slate-900 group-hover:text-teal-600">Suggest next steps</p>
                <p className="text-xs text-slate-500 mt-1">Get recommendations</p>
              </button>
              <button
                onClick={() => setInput('Explain this topic: [your topic]')}
                className="p-4 bg-white border border-slate-200 rounded-xl text-left hover:border-teal-500 hover:shadow-md transition-all group"
              >
                <p className="text-sm font-medium text-slate-900 group-hover:text-teal-600">Deep dive</p>
                <p className="text-xs text-slate-500 mt-1">Explore a topic</p>
              </button>
            </div>
          </div>
        )}

        {messages.map((msg, idx) => (
          <motion.div
            key={idx}
            initial={{ opacity: 0, y: 10 }}
            animate={{ opacity: 1, y: 0 }}
            className={`flex ${msg.role === 'user' ? 'justify-end' : 'justify-start'}`}
          >
            <div className={`max-w-[80%] ${msg.role === 'user' ? 'order-2' : 'order-1'}`}>
              <div className={`rounded-2xl px-5 py-3 ${
                msg.role === 'user'
                  ? 'bg-teal-500 text-white'
                  : 'bg-white border border-slate-200 text-slate-900'
              }`}>
                <div className="prose prose-sm max-w-none">
                  <ReactMarkdown>
                    {msg.content}
                  </ReactMarkdown>
                </div>
                
                {msg.sources && msg.sources.length > 0 && (
                  <div className="mt-3 pt-3 border-t border-slate-100">
                    <p className="text-xs text-slate-500 mb-2">ðŸ“š Sources:</p>
                    <div className="flex flex-wrap gap-1">
                      {msg.sources.map((source, i) => (
                        <span key={i} className="px-2 py-0.5 bg-slate-100 text-slate-600 text-xs rounded-full">
                          {source}
                        </span>
                      ))}
                    </div>
                  </div>
                )}
              </div>

              <div className="flex items-center gap-2 mt-2 px-2">
                <span className="text-xs text-slate-500">
                  {new Date(msg.timestamp).toLocaleTimeString()}
                </span>
                {msg.role === 'model' && (
                  <button
                    onClick={() => copyToClipboard(msg.content)}
                    className="p-1 hover:bg-slate-100 rounded transition-colors"
                    title="Copy"
                  >
                    {copied ? (
                      <Check className="w-3.5 h-3.5 text-green-500" />
                    ) : (
                      <Copy className="w-3.5 h-3.5 text-slate-400" />
                    )}
                  </button>
                )}
              </div>
            </div>
          </motion.div>
        ))}

        {loading && (
          <div className="flex justify-start">
            <div className="bg-white border border-slate-200 rounded-2xl px-5 py-3">
              <div className="flex items-center gap-2">
                <div className="w-2 h-2 bg-teal-500 rounded-full animate-bounce" style={{ animationDelay: '0ms' }} />
                <div className="w-2 h-2 bg-teal-500 rounded-full animate-bounce" style={{ animationDelay: '150ms' }} />
                <div className="w-2 h-2 bg-teal-500 rounded-full animate-bounce" style={{ animationDelay: '300ms' }} />
              </div>
            </div>
          </div>
        )}

        <div ref={messagesEndRef} />
      </div>

      {/* Input */}
      <div className="bg-white border-t border-slate-200 px-6 py-4">
        <div className="flex items-end gap-3">
          <div className="flex-1 relative">
            <textarea
              ref={inputRef}
              value={input}
              onChange={(e) => setInput(e.target.value)}
              onKeyDown={(e) => {
                if (e.key === 'Enter' && !e.shiftKey) {
                  e.preventDefault();
                  handleSend();
                }
              }}
              placeholder={`Ask me anything about ${spaceName}...`}
              className="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl resize-none focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent text-slate-900 placeholder-slate-400"
              rows={3}
              disabled={loading}
            />
            <div className="absolute right-3 bottom-3 text-xs text-slate-400">
              {input.length > 0 && `${input.length} chars Â· `}
              Shift+Enter for new line
            </div>
          </div>
          
          <button
            onClick={handleSend}
            disabled={!input.trim() || loading}
            className="px-6 py-3 bg-teal-500 hover:bg-teal-600 disabled:bg-slate-300 text-white rounded-xl font-medium transition-all flex items-center gap-2 disabled:cursor-not-allowed h-[76px]"
          >
            <Send className="w-5 h-5" />
            Send
          </button>
        </div>
      </div>
    </div>
  );
};

export default AIChat;
